<div class="container bg-light text-dark p-4 rounded shadow">
    <h2 class="text-center mb-4">Sửa thể loại</h2>
    <% if (data.message) { %>
        <div class="alert alert-danger" role="alert">
            <%= data.message %>
        </div>
    <% } %>
    <form action="/edit-category/<%= data.category.matheloai %>" method="POST">
        <input type="hidden" name="id" value="<%= data.category.matheloai %>">  <!-- Giữ ID nhóm -->
        <div class="form-group mb-3">
            <label for="categoryName" class="form-label">Tên thể loại</label>
            <input type="text" class="form-control" id="categoryName" name="ten" value="<%= data.category.tentheloai %>" required>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a href="/list-category" class="btn btn-secondary">Quay lại danh sách thể loại</a>
        </div>
    </form>
</div>

<style>
    .container {
        max-width: 1200px;
        margin-top: 20px;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary, .btn-secondary {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
    }
</style>
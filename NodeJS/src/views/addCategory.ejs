<!-- insertCategory.ejs -->
<div class="container bg-light text-dark p-4 rounded shadow">
    <h2 class="text-center mb-4">Thêm thể loại</h2>
    <!-- Hiển thị thông báo lỗi nếu có -->
    <% if (data.message) { %>
        <div class="alert alert-danger" role="alert">
            <%= data.message %>
        </div>
    <% } %>

    <form action="/insert-category" method="POST">
        <div class="form-group mb-3">
            <label for="categoryName" class="form-label">Tên thể loại</label>
            <input type="text" class="form-control" id="categoryName" name="ten" required>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Thêm</button>
            <a href="/list-category" class="btn btn-secondary">Quay lại danh sách thể loại</a>
        </div>
    </form>
</div>

<style>
    .container {
        max-width: 1200px;
        margin-top: 20px;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary, .btn-secondary {
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
    }
</style>